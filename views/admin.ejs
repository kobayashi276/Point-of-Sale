        <!-- Page product Content -->
        <div class="page-content product-page ">
            <h2>Product List</h2>
            <table class="table table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Barcode</th>
                        <th scope="col">Product Name</th>
                        <th scope="col">Import Price</th>
                        <th scope="col">Retail Price</th>
                        <th scope="col">Category</th>
                        <th scope="col">Thumbnail</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Multiple rows of product data -->
                    <% products.forEach((p,index)=> { %>
                        <tr class="table-animate">
                            <th scope="row">
                                <%= index+1 %>
                            </th>
                            <td>
                                <%= p.barcode %>
                            </td>
                            <td>
                                <%= p.name %>
                            </td>
                            <td>
                                <%= p.importprice %>
                            </td>
                            <td>
                                <%= p.retailprice %>
                            </td>
                            <td>
                                <%= p.category %>
                            </td>
                            <td><img src="iphone_thumbnail.jpg" alt="iPhone" style="width: 50px; height: auto;"></td>
                            <td>
                                <button class="btn btn-primary btn-sm">Edit</button>
                                <button class="btn btn-danger btn-sm">Delete</button>
                            </td>
                        </tr>
                        <% }) %>



                </tbody>
            </table>
        </div>


        <!-- Page list of seller Content -->
        <div class="page-content seller-page disable-page">
            <div style="display: flex;">
                <h2>Seller List</h2>
                <button type="button" style="margin-left:20px ;height: 35px;align-items: center;"
                    class="btn btn-primary btn-sm" data-toggle="modal" data-target="#registerseller">Add New
                    Seller</button>
            </div>
            <table class="table table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Username</th>
                        <th scope="col">Email</th>
                        <th scope="col">Active status</th>
                        <th scope="col">Lock status</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach((u,index)=> { %>
                        <tr class="table-animate">
                            <th scope="row">
                                <%= index+1 %>
                            </th>
                            <td>
                                <%= u.fullname %>
                            </td>
                            <td>
                                <%= u.email %>
                            </td>
                            <td>
                                <%= u.active %>
                            </td>
                            <td>
                                <%if(u.lock=='true'){%>
                                    <i class="fa-solid fa-lock"></i>
                                    <%}else{%>
                                        <i class="fa-solid fa-lock-open"></i>
                                        <% } %>
                            </td>

                            <td>
                                <button type="button" class="btn btn-primary btn-sm lock" data-email="<%= u.email %>"
                                    data-toggle="modal" data-target="#resendEmail">
                                    Resend verification
                                </button>

                                <% if( u.lock=='false' ){ %>
                                    <button onclick="lock('<%= u.email %>')" type="button"
                                        class="btn btn-danger btn-sm lock" data-email=<%=u.email %>
                                        data-toggle="modal" data-target="#lockseller">
                                        Lock
                                    </button>
                                    <% } else{ %>
                                        <button onclick="unlock('<%= u.email %>')" type="button"
                                            class="btn btn-danger btn-sm lock" data-email=<%=u.email %>
                                            data-toggle="modal" data-target="#unlockseller">
                                            UnLock
                                        </button>
                                        <% } %>

                                            <button type="button" class="btn btn-warning btn-sm delete"
                                                data-email="<%= u.email %>" data-toggle="modal"
                                                data-target="#detailseller">
                                                Detail
                                            </button>
                            </td>
                        </tr>
                        <%}) %>


                </tbody>
            </table>
        </div>




